<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class table="horarios" dynamic-insert="false" dynamic-update="false" mutable="true" name="model.Horario" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
    <id name="id" column="horario_id" type="integer">
        <generator class="sequence"/>
    </id>
    
    <property name="entrada" column="horario_entrada" type="time" />
    <property name="salida" column="horario_salida" type="time" />

    <one-to-one name="reserva" class="model.Reserva" foreign-key="reserva_id"/>
  </class>
</hibernate-mapping>
