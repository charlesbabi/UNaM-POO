<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class table="problemas" dynamic-insert="false" dynamic-update="false" mutable="true" name="model.Problema" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
      <id name="id" column="problema_id" type="integer">
          <generator class="sequence" />
      </id>
      <property name="descripcion" column="problema_descripcion" type="string"/>
      <property name="duracion" column="problema_duracion" type="integer" />

  </class>
</hibernate-mapping>
