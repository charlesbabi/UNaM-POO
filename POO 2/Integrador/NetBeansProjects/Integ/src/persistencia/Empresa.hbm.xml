<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="modelo.Empresa" table="empresa">
      <id name="id" column="id">
          <generator class="assigned" />
      </id>
      
      <property name="nombre" column="nombre" type="string" />
      <property name="direccion" column="direccion" type="string" />
      
      <map name="personas" cascade="all">
        <key column="empresa_id"/>
        <map-key column="dni" type="int"/>
        <one-to-many class="modelo.Persona"/>
      </map>
      
      <map name="marcas" cascade="delete, save-update, all">
          <key column="empresa_id"/>
          <map-key column="nombre" type="string" />
          <one-to-many class="modelo.Marca" />
      </map>
      
      <map name="modelos" cascade="delete, save-update, all" >
          <key column="empresa_id"/>
          <map-key column="id" type="int" />
          <one-to-many class="modelo.Modelo" />
      </map>
      
  </class>
</hibernate-mapping>
