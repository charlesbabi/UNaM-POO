<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="modelo.Marca" table="marcas">
      <id name="nombre" column="nombre_marca">
          <generator class="assigned" />
      </id>
      
      <property name="valorPorHora" column="valor_por_hora" type="float" /> 
      
      <list name="modelos" cascade="all">
         <key column="nombre_marca"/>
         <list-index column="nombre"/>
         <one-to-many class="modelo.Modelo"/>
      </list>
      
      <list name="especialistas" cascade="all">
         <key column="nombre_marca"/>
         <list-index column="dni"/>
         <one-to-many class="modelo.Especialista"/>
      </list>

  </class>
</hibernate-mapping>
