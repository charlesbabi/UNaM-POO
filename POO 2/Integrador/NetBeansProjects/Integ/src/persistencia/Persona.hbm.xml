<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="modelo.Persona" table="personas">
    <id column="dni" name="dni" type="int">
      <generator class="assigned"/>
    </id>
    
    <property column="apellido" name="apellido" />
    <property column="nombre_persona" name="nombre"/>
    <property column="telefono" name="telefono" />
    
    <joined-subclass name="modelo.Cliente" table="clientes">
      <key column="dni"/>
      
      <map name="vehiculos" cascade="all">
        <key column="cliente_dni" />
        <map-key column="patente" type="string"/>
        <one-to-many class="modelo.Vehiculo"/>
      </map>
      
      <list name="reservas" >
        <key column="cliente_dni"/>
        <list-index column="reserva_cliente_index" />
        <one-to-many class="modelo.Reserva"/>
      </list>
    </joined-subclass>

    <joined-subclass name="modelo.Especialista" table="especialistas">
      <key column="dni"/>
      
      <list name="reservas" >
        <key column="especialista_dni"/>
        <list-index column="reserva_especialista_index" />
        <one-to-many class="modelo.Reserva"/>
      </list>
      
      <list name="horarios">
        <key column="especialista_dni"/>
        <list-index column="horario_especialista_index" />
        <one-to-many class="modelo.Horario"/>
      </list>
      
      <many-to-one name="marca" column="nombre_marca" class="modelo.Marca" />
      
      <list name="servicios">
        <key column="especialista_dni"/>
        <list-index column="servicios_especialista_index" />
        <one-to-many class="modelo.Servicio"/>
      </list>
      
    </joined-subclass>
  </class>
</hibernate-mapping>
