<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="modelo.Marca" table="marcas">
      <id name="id" column="id">
          <generator class="increment" />
      </id>
      
      <property name="valorPorHora" column="valor_por_hora" type="float" /> 
           
      <property name="nombre" column="nombre" type="string" />
      
      <map name="modelos" cascade="all">
        <key column="marca_id"/>
        <map-key column="nombre" type="string"/>
        <one-to-many class="modelo.Modelo"/>
      </map>
      
      <map name="especialistas" cascade="all">
         <key column="marca_id" />
         <map-key column="dni" type="int" />
         <one-to-many class="modelo.Especialista" />
      </map>      
  </class>
</hibernate-mapping>
