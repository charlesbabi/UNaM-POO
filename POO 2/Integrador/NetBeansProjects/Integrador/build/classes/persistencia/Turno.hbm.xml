<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="modelo.Turno" table="turnos" dynamic-insert="false" dynamic-update="false" mutable="true" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
      <id name="id" column="id">
          <generator class="increment" />
      </id>
      <property name="duracion" column="duracion" />
      <property name="inicio" column="inicio" />
      <property name="descripcion" column="descripcion" />
      <!--
      <many-to-one name="servicio" column="servicio" 
       class="Servicio"/>
      -->
  </class>
</hibernate-mapping>
