<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="modelo.Persona" table="personas">
    <id column="dni" name="dni" type="int">
      <generator class="assigned"/>
    </id>
    
    <property column="nombre" name="nombre"/>
    <property column="apellido" name="apellido" />

    <joined-subclass name="modelo.Cliente" table="clientes">
      <key column="dni"/>
      
      <map name="vehiculos" cascade="all">
        <key column="dni" />
        <map-key column="patente" type="string"/>
        <one-to-many class="modelo.Vehiculo"/>
      </map>
    </joined-subclass>

    <joined-subclass name="modelo.Especialista" table="especialistas">
      <key column="dni"/>
      
      <list name="turnos">
        <key column="especialista_dni"/>
        <list-index column="turno_index" />
        <one-to-many class="modelo.Turno"/>
      </list>
      
      <list name="horarios">
        <key column="especialista_dni"/>
        <list-index column="horarios_index" />
        <one-to-many class="modelo.Horario"/>
      </list>
      
    </joined-subclass>
  </class>
</hibernate-mapping>
